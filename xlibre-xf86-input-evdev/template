# Template file for 'xlibre-xf86-input-evdev'
pkgname=xlibre-xf86-input-evdev
version=2.11.0.2
revision=1
build_style=gnu-configure
hostmakedepends="pkg-config"
makedepends="xlibre-server-devel mtdev-devel libevdev-devel automake gawk libtool m4 xorg-util-macros"
depends="virtual?xserver-abi-input-26_1"
short_desc="XLibre event device input driver"
maintainer="RotaryBoot58 <petersoncraft20@proton.me>"
license="MIT"
homepage="https://github.com/X11Libre/xf86-input-evdev"
