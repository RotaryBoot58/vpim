hostmakedepends="pkg-config"
makedepends="xlibre-server-devel autoconf automake binutils fakeroot findutils gawk gettext gzip libtool m4 make patch pkgconf xorg-util-macros"
depends="virtual?xserver-abi-video-28_1 mesa-dri"
